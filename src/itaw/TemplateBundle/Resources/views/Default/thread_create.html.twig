{% extends "itawTemplateBundle:Default:layout.html.twig" %}

{% block currentPage %}forums{% endblock %}
{% block title %}{{forum_title}} &middot; {{forum.title}} &middot; Neuer Thread{% endblock %}

{% block content %}

<ol class="breadcrumb">
    {% for b in forum.breadcrumbs %}
    <li><a href="{{ path('itaw_forum_show_forum', {forum_slug: b.slug}) }}">{{b.title}}</a></li>
    {% endfor %}
    <li class="active">{{forum.title}}</li>
</ol>

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">Neuer Thread</h3>
    </div>
    <div class="panel-body">

        <div class="row">
            <div class="col-lg-12">
                <form role="form" action="{{ path('itaw_forum_create_thread', {forum_slug: forum.slug}) }}" method="POST">
                    <div class="form-group">
                        <label for="input-thread-title">Titel</label>
                        <input type="text" class="form-control" id="input-thread-title" name="title">
                    </div>
                    <div class="form-group">
                        <textarea id="input-post-text" class="form-control" rows="15" name="text"></textarea>
                    </div>
                    <input type="hidden" name="sent" value="1">
                    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus-sign"></span> Absenden</button>
                </form>
            </div>
        </div>

    </div>
</div>

{% endblock %}